(
    tasks: {
        "build": (
            command: "cargo build",
            inputs: ["src/**/*.rs", "Cargo.toml"],
        ),
        "test": (
            command: "cargo test",
            deps: ["build"],
        ),
        "lint": (
            command: "cargo clippy",
            args: ["--all-features", "--", "-D", "warnings"],
        ),
    },
)